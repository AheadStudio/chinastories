			border-radius 5px

			background #fff

			.jcf-list
				display block
				padding 15px 10px 15px 25px
				box-sizing border-box

			.jcf-list-content
				display block

			.jcf-scrollbar-vertical
				display block
				top 0
				right 0
				bottom 0

				.jcf-scrollbar-slider
					width 5px
					height 100%

					.jcf-scrollbar-handle
						width 100%
						max-height 100%

						border-radius 5px
						background-color #cecece

		.jcf-list-content
			ul
				li
					transition color 0.3s $transitionAnimation
					cursor pointer

					color #202020

					&:last-child
						margin-bottom 0

					&:hover
						color $colorred

					.jcf-option
						display block

						padding 10px 0
						box-sizing border-box

						&-hideme
							display none
.jcf-number
	display flex
	justify-content space-between

	.jcf-btn-inc
		position relative
		display block
		width 33%
		order 3


		border 2px solid #bd1d1d
		border-top-right-radius 5px
		border-bottom-right-radius 5px
		border-left none

		background #fff

		cursor pointer

		&:before
			position absolute
			top 50%
			left 50%

			content ""
			display block
			width 15px
			height 2px

			margin-top -1px
			margin-left -7.5px

			background-color #000

			transition background-color 0.3s $transitionAnimation

		&:after
			position absolute
			top 50%
			left 50%

			content ""
			display block
			width 2px
			height 15px

			margin-top -7.5px
			margin-left -1px

			background-color #000

			transition background-color 0.3s $transitionAnimation

		&:hover
			&:after
			&:before
				background-color $colorred

	.form-item
		width 33%
		order 2
		padding 15px
		text-align center
		border-radius 0

	.jcf-btn-dec
		position relative
		display block
		width 33%
		order 1

		border 2px solid #bd1d1d
		border-top-left-radius 5px
		border-bottom-left-radius 5px
		border-right none

		background #fff

		cursor pointer

		&:before
			position absolute
			top 50%
			left 50%

			content ""
			display block
			width 15px
			height 2px

			margin-top -1px
			margin-left -7.5px

			background-color #000

			transition background-color 0.3s $transitionAnimation

		&:hover
			&:before
				background-color $colorred
.form-row
	.form-holder
		.jcf-number
			label.error
				bottom -35px

.form-item
	display block
	width 100%
	padding 15px 25px
	box-sizing border-box

	border 2px solid $colorred
	border-radius 5px

	font-size 18px
	font-family "PTMonoRegular"

	color #202020

	background #fff

	transition background 0.3s $transitionAnimation

	&--textarea
		resize none

	&--number
	 	-moz-appearance textfield
		&::-webkit-inner-spin-button
		&::-webkit-outer-spin-button
			-webkit-appearance none
			margin 0

	&.error
		background-color #ecc7c7

	&:hover
		background #f4f4f4

/* style for form step */
.form-steps
	transition transform 0.5s $transitionAnimation, opacity 0.3s $transitionAnimation

	&.preload
		opacity 0
		transform translateY(50px)

	.form-step-text
		display block

		&--center
			text-align center

	.form-step
		margin-top 60px

		transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

		&.hide-show
			opacity 0
			transform translateY(-10px)

		&.disabled
			display none

		.form-back
			display block
			text-align center

			.form-back-item
				font-size 18px

	.form-result
		display block
		margin 45px 0

		.form-result-text
			display block
			margin-bottom 25px
			color #000

		.form-result-info
			display block
			color $colorred

	.privacy-policy
		width 50%
		padding-top 8px
		box-sizing border-box

		float right
		vertical-align top

		font-size 14px
		line-height 18px


.form-step-container
	.lazy-modal-container
		max-width 680px
		background-color $colorred

	.lazy-modal-close
		width 20px
		height 20px
		right 35px
		top 35px

	.form-container
		.form-icon
			svg
				path
					fill #fff

	.form
		.form-title
			color #fff

	.form-steps
		.form-step-text
			color #fff

		.form-result
			.form-result-text
				color #fff

			.form-result-info
				color #000

		.privacy-policy
			.link
				color #fff
				box-shadow inset 0 1px transparent, inset 0 -1px transparent
				transition box-shadow 0.3s $transitionAnimation

				&:hover
					box-shadow inset 0 1px transparent, inset 0 -1px #fff


	.form-row
		.form-label
			.form-label-text
				color #fff

		.button
			border-color #fff
			background $colorred
			color #fff

			font-family "PTMonoRegular"

			&:hover
				background #fff
				color $colorred

		.form-holder
			.jcf-select-form-item--select
				&.jcf-select-error
					border-color #000
					background-color #fff

			.jcf-number
				label.error
					color #000
		label.error
			color #000

	.form-item
		&.error
			border-color #000
			color #000
			background-color #fff


	.form-success
		margin-top 230px

		.page-text
			h1
				color #fff
			p
				color #fff

		.form-success-social

			.form-success-social-list

				.form-success-social-item

					svg
						path:not([fill=none])
							fill #fff

.form-close
	position absolute
	width 20px
	height 20px
	top 0
	left 0
	right 0
	bottom 0
	background-image url(../svg/close.svg)
	background-position center
	background-repeat no-repeat
	background-size contain

.lazy-modal-container
	transform translateY(-50px)
	transition all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
	transition-delay 0s

.lazy-modal.lazy-modal--show .lazy-modal-container
	transform translateY(0)
	transition-delay 0.3s

.lazy-modal-background
	transition-delay 0.3s

.lazy-modal.lazy-modal--show .lazy-modal-background
	transition-delay 0s


.form-success
	text-align center

	.page-text
		h1
			margin-bottom 25px
		p
			margin-bottom 10px

	.form-success-social
		margin-top 120px

		.form-success-social-list
			display grid
			grid-template-columns 1fr 1fr 1fr 1fr

			max-width 400px
			margin 0 auto

			margin-top 50px

			.form-success-social-item
				display block
				max-width 100px
				height 60px

				svg
					display block
					width 100%
					height 100%

					path:not([fill=none])
						fill $colorred
						transition fill 0.3s $transitionAnimation

				&:hover
					svg
						path:not([fill=none])
							fill #000


