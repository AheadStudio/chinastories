					color $colorred

.page-footer
	display flex
	justify-content space-between
	align-content center

	width 100%

	padding 0 35px 25px 30px
	box-sizing border-box

	.footer-location
		display inline-block
		padding-right 5px
		box-sizing border-box
		vertical-align top

		font-size 22px
		font-family "RistrettoProRegular"

		text-transform uppercase

		letter-spacing 2.5px

		&--red
			color $colorred

		&--white
			color #fff

	.footer-mobile
		font-size 22px
		font-family "RistrettoProRegular"
		letter-spacing 2.5px
		white-space nowrap
		&--red
			color $colorred

		&--white
			color #fff

	.footer-social
		display flex
		justify-content space-between

		.footer-social-item
			display block
			margin-right 15px
			max-width 40px
			height 25px

			&:last-child
				margin-right 0

			svg
				display block
				width 100%
				height 100%

				path
					transition fill 0.3s $transitionAnimation

			&:hover
				svg
					path:not([fill=none])
						fill $colorred

		&--red
			.footer-social-item
				svg
					path:not([fill=none])
						fill $colorred

				&:hover
					svg
						path:not([fill=none])
							fill #000
.footer-holder
	position relative
	z-index 200

