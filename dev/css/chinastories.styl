/** header and footer **/

.page-header
	display flex
	justify-content space-between

	width 100%

	padding 25px 35px 90px 30px
	box-sizing border-box

.header-holder
	position relative
	z-index 200

	&--fixed
		z-index 501

.header-burger
	position relative
	display block
	width 30px
	height 20px

	cursor pointer

	transition transform 0.3s $transitionAnimation

	.header-burger-inner
		position absolute
		top 8.5px
		left 0
		right 0

		display block
		width 100%
		height 2px
		transition background-color 0.3s $transitionAnimation, transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	&:before
		content ""

		position absolute
		top 0
		left 0
		right 0

		display block
		width 100%
		height 2px

		transition background-color 0.3s $transitionAnimation

	&:after
		content ""

		position absolute
		left 0
		bottom 0
		right 0

		display block
		width 100%
		height 2px

		transition background-color 0.3s $transitionAnimation

	&--white
		&:before
		&:after
		.header-burger-inner
			background-color #fff

	&--red
		&:before
		&:after
		.header-burger-inner
			background-color $colorred

	&:hover
		&:before
		&:after
		.header-burger-inner
			background-color $colorred

	&.active
		z-index 100

		&:before
			animation beforeBurger 0.5s $transitionAnimation forwards

		&:after
			animation afterBurger 0.5s $transitionAnimation forwards

		.header-burger-inner
			transform scale(0)

		&--hover
			&:hover
				transform rotate(90deg)

				&:before
				&:after
				.header-burger-inner
					background-color #fff
	&.close
		&:before
			animation beforeBurgerInit 0.5s $transitionAnimation forwards

		&:after
			animation afterBurgerInit 0.5s $transitionAnimation forwards

		.header-burger-inner
			transform scale(1)

.header-logo
	position absolute
	top 45px
	left 0

	.header-logo-home
		display block
		width 130px
		margin-bottom 17px

		svg
			display block
			width 100%
			height 100%

	.header-logo-title
		padding-right 20px
		box-sizing border-box

		font-size 24px
		font-family "RistrettoProRegular"

		color $colorred

	&--horizotal
		display none

		.header-logo-home
			width auto
			max-width 200px

.header-booking
	width 100%
	max-width 210px
	height 45px
	padding 11px 19px

	margin-bottom 20px

	text-transform uppercase

	font-family "RistrettoProRegular"

	font-size 22px

	letter-spacing 2.5px

	z-index 100

.lang-bar
	text-align center

	.lang-bar-item
		display inline-block
		margin-right 10px

		vertical-align top

		box-sizing border-box

		font-size 22px
		font-family "RistrettoProRegular"

		transition color 0.3s $transitionAnimation

		&.delimiter
			position relative
			padding-right 18px

			&:after
