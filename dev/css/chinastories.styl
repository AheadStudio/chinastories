/** header and footer **/
.page-header
	display flex
	justify-content space-between

	width 100%

	padding 25px 35px 155px 30px
	box-sizing border-box

.header-burger
	position relative
	display block
	width 30px
	height 20px

	cursor pointer

	.header-burger-inner
		position absolute
		top 8.5px
		left 0
		right 0

		display block
		width 100%
		height 2px
		transition background-color 0.3s $transitionAnimation, transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	&:before
		content ""

		position absolute
		top 0
		left 0
		right 0

		display block
		width 100%
		height 2px

		transition background-color 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

	&:after
		content ""

		position absolute
		left 0
		bottom 0
		right 0

		display block
		width 100%
		height 2px

		transition background-color 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

	&--white
		&:before
		&:after
		.header-burger-inner
			background-color #fff

	&--red
		&:before
		&:after
		.header-burger-inner
			background-color $colorred

	&:hover
		&:before
		&:after
		.header-burger-inner
			background-color $colorred

	&.active
		&:before
			transform translateY(9.5px) rotate(-40deg)

		&:after
			transform translateY(-8.5px) rotate(40deg)

		.header-burger-inner
			opacity 0

.header-booking
	width 100%
	max-width 210px
	height 45px
	padding 11px 19px

	margin-bottom 20px

	text-transform uppercase

	font-family "RistrettoProExtraLight"

	font-size 22px

	letter-spacing 2.5px

.lang-bar
	text-align center

	.lang-bar-item
		display inline-block
		margin-right 10px

		vertical-align top

		box-sizing border-box

		font-size 22px
		font-family "RistrettoProExtraLight"

		transition color 0.3s $transitionAnimation

		&.delimiter
			position relative
			padding-right 18px

			&:after
				content "/"
				position absolute
				right 0
				top 0
				bottom 0

				font-size 22px

	&--white
		.lang-bar-item
			color #fff

			&:hover
				color $colorred

			&.delimiter
				&:after
					color #fff

	&--red
		.lang-bar-item
			color $colorred

			&:hover
				color #fff

			&.delimiter
				&:after
					color $colorred


/** //header and footer **/
