	justify-content space-between
	align-items center

	margin-bottom 45px

	&-w25
		width 25%

	&-w30
		width 30%

	&-w40
		width 40%

	&-w60
		width 60%

	&-w65
		width 65%

	&-w70
		width 70%

	&-w80
		width 80%

	&-w100
		width 100%

	&--relative
		position relative

	&--button
		margin-top 55px

	.form-label
		display block
		margin-bottom 15px

		cursor pointer

		.form-label-text
			font-size 18px

	.button
