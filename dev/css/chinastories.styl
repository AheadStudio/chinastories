				.jcf-select-opener
					background-image url("../svg/arrow_form_bottom_red.svg")

			&.jcf-select-error
				background-color #ecc7c7

.jcf-select-form-item--select
	&.jcf-select-drop
		z-index 200000

		.jcf-select-drop-content
