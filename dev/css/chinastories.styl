			cursor pointer
			transition background 0.3s $transitionAnimation

			.jcf-select-opener
				position absolute
				top 54%
				right 15px
				display block
				width 20px
				height 11px

				background-image url("../svg/arrow_form_bottom.svg")
				background-size contain
				background-repeat no-repeat

				transform translateY(-50%)
				transition background-image 0.3s $transitionAnimation

			.jcf-select-text
				color #202020

			&.jcf-drop-active
			&:hover
