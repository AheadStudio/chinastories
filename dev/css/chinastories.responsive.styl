@media screen and (max-width: 1024px)
    .page
        margin-bottom 90px

    body.home-page
    body.home_video-page
        .page-footer--main
            padding 0 35px 20px 30px

        .background-video
            display none

    .page-header
        padding 25px 30px 90px 30px

    .page-inner
        &--w0
            max-width 940px
        &--w1
            max-width 780px

    .chefs
        margin-top 95px

        .chefs-container-img
            max-width 64%

        .chefs-holder
            &--reverse
                .chefs-container-info
                    padding-right 3%

        .chefs-container-info
            max-width 35%
            padding-left 4%

            .chefs-name
                margin-bottom 20px

                letter-spacing 2.5px
                font-size 44px

            .chefs-position
                font-size 16px

            .chefs-desc
                line-height 24px
                font-size 16px

    .menu
        grid-template-rows minmax(auto, 355px)
        grid-gap 0 4%
        margin-top 65px

    .menu-item
        .menu-name
            white-space nowrap
            font-size 54px

    .news
        margin-top 65px

    .news-item
        margin-bottom 90px

        .news-item-container-img
            max-width 55%

        .news-item-container-info
            max-width 44%
            width auto

            .news-item-title
                margin-bottom 20px
                font-size 44px
                letter-spacing 2.5px

            .news-item-date
                margin-bottom 20px

            .news-item-text
                margin-bottom 25px
                font-size 16px
                line-height 24px

    .contacts
        margin-top 70px

    .contacts-location
        .contacts-city
            font-size 16px
            margin-bottom 18px

        .contacts-street
            font-size 16px
            margin-bottom 18px

        .contacts-mobile
            font-size 16px

    .contacts-mode
        .contacts-mode-text
            font-size 16px

    .form
        .form-title
            font-size 44px

            &--big
                font-size 64px

    .map-container
        margin-top 15px
        margin-bottom 60px
        height 570px

    .form-step-container
        .lazy-modal-container
            max-width 635px

        .form-success
            margin-top 150px

    .form-container
        .form-icon
            margin 0 auto 12px auto

    .form-row
        &-w65
            width 61%
        &-w25
            width 30%
        &-w30
            width 40%
        &-w70
            width 56%
        &--button
            margin-top 35px

    .form-steps
        .privacy-policy
            padding-left 10px

    .form-success
        .form-success-social
            margin-top 65px

            .form-success-social-list
                margin-top 25px

@media screen and (max-width: 965px)
    .page-inner
        &--w0
            max-width 940px
        &--w1
            max-width 780px
        &--w2
            max-width 450px
            padding-left 0

    .news-item

        margin-bottom 25px

        flex-flow column

        .news-item-container-img

            max-width 100%

        .news-item-container-info
            padding 40px 0
            max-width 100%

@media screen and (max-height: 450px)
    .mobile-menu
        .mobile-menu-container
            .page-footer
                position relative

            .mobile-menu-container-holder
                position relative
                top 0
                transform translateY(0)
                margin-bottom 20px
                padding-left 25px

@media screen and (max-width: 800px)
    body.home-page
    body.home_video-page
        .page-content
            margin-top 0

    .page-content
        margin-top 250px

    .presentation

        .presentation-title
            font-size 38px
            line-height 44px

    .header-logo
        .header-logo-title
            display block
            width auto
            max-width 200px

    .page-footer--main
        padding  25px 30px 30px 30px

    .mobile-menu
        .mobile-menu-container
            .mobile-menu-container-holder
                padding-left 65px


    .page-text
        h1
            margin-bottom 20px
            font-size 54px
            line-height 64px

        .content-slider-container
            margin-top 0
            margin-bottom 25px

            .content-slider-arrows
                display none
                .slick-arrow-prev
                    left 20px

                .slick-arrow-next
                    right 20px

            &--big
                max-height 250px

                .content-slider
                    .content-slider-item
                        img
                            width 100%
                            max-height 250px
                            object-position center
                            object-fit cover

    .page-inner
        &--w2
            max-width 100%
            padding 0 25px

        &--w0
            max-width 100%
            padding 0px

