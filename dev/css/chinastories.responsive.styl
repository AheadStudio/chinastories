    .page-text
        h1
            margin-bottom 40px
            letter-spacing 3.5px
            font-size 64px

        figure
            margin 95px 0 40px 0

        p
            font-size 16px
            line-height 24px

        .text-date
            margin-bottom 30px
            font-size 16px
            line-height 1

        .content-slider-container
