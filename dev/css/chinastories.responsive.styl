/*** mobile ***/
@media screen and (max-width: 690px)
    .page
        margin-bottom 70px

    .page-content
        margin-top 0

    .presentation
        margin-top 45px

        .presentation-logo
            margin 0 auto 15px auto

    // стили на всех старницах
    .page-header--main
        flex-flow row-reverse
        padding 25px 25px 0px 25px

        .header-booking
            display none

        .lang-bar
            display none

    .header-logo
        display none

        &--horizotal
            top -6.5px
            position inherit
            display block

    .page-footer--main
        flex-flow column-reverse

        .footer-holder:first-child
            max-width 190px

        .footer-holder:last-child
            max-width 150px
            margin-bottom 25px
            margin-left -7px

            .footer-social-item
                margin-right 0

            .footer-social-item:last-child
                max-width 38px


    // стили на главной
    body.home-page
    body.home_video-page
        .page-header--main
            .lang-bar
                display block

        .page-footer
            padding 0 20px 40px 20px

            &--main
                justify-content center
                padding-bottom 20px

                .footer-holder
                    max-width auto
                    text-align center

                    &:first-child
                        max-width 100%

                    &:last-child
                        display none
                        max-width 100%
                        margin-bottom 0

                .footer-mobile
                    margin 0 auto

                .footer-location
                    padding-right 0

                .footer-holder
                    &:last-child
                        display none

    .mobile-menu
        .mobile-menu-container
            .page-header
                padding 25px 25px 10px 25px
                flex-flow column-reverse

                .lang-bar
                    margin-top 15px
                    text-align left

            .page-footer
                position relative
                padding 0 20px 5px 25px
                flex-flow column-reverse

                .footer-holder:first-child
                    max-width 180px
                    line-height 28px

                .footer-holder:last-child
                    max-width 150px
                    margin-bottom 15px
                    margin-left -7px

                    .footer-social-item
                        margin-right 0

                    .footer-social-item:last-child
                        max-width 38px


            .mobile-menu-container-holder
                position relative
                top 0
                transform translateY(0)
                margin-bottom 35px
                margin-top 20px
                padding-left 25px

    .mobile-menu-holder
        .mobile-menu-holder-item-holder
            .mobile-menu-holder-item
                font-size 46px
                line-height 42px

    .page-text
        figure
            margin 25px 0

        dl
            dt
                font-size 12px

    .chefs
        margin-top 30px

        .chefs-holder
            margin-bottom 20px
            flex-flow column

            &--reverse
                .chefs-container-info
                    max-width 100%
                    width 100%
                    padding 25px 20px

        .chefs-container-img
            max-width 100%

        .chefs-container-info
            max-width 100%
            width 100%
            padding 25px 20px

            .chefs-name
                margin-bottom 25px
                font-size 54px
                letter-spacing 3px

            .chefs-position
                margin-bottom 25px

    .page-inner
        &--max30
            padding 0 20px

    .menu
        grid-template-columns 1fr
        grid-template-rows repeat(3, 395px)
        grid-gap 15px 0

    .news
        margin-top 0

    .news-holder
        margin-bottom 40px

    .news-item
        margin-bottom 25px

        .news-item-container-info
            padding 25px 0px

            .news-item-title
                font-size 54px

            .news-item-date
                margin-bottom 12px

    .contacts
        max-width 315px
        grid-template-columns 1fr
        grid-gap 55px 0

        margin-top -25px

    .map-container
        margin-top 25px
        margin-bottom 20px

    .form
        .form-title
            font-size 54px

    .form-row
        margin-bottom 30px
        flex-flow column
        justify-content flex-start
        align-items flex-start

        &-w25
            width 180px
            margin-top 30px

        &-w65
            width 100%

        &-w30
            width 100%

        &--button
            flex-flow row
            align-items center

            .form-row-w30
                width 70%

            .form-row-w70
                width 30%

            .form-step-text
                text-align right

        .button
            width 100%

    .form-steps
        .privacy-policy
            width 100%
            padding 0

            margin-bottom 30px

        .form-step
            margin-top 40px

    .form-step-container
        .form-success
            margin-top 30px

        .form-steps
            .form-result
                margin-bottom 30px

                .form-result-text
                    margin-bottom 20px
                .form-result-info
                    line-height 25px

    .form-success
        .form-success-social
            margin-top 50px
            .form-success-social-list
                .form-success-social-item
                    max-width 65px
                    height 45px

    .form-row--button
        .form-row--relative
            display flex
            flex-flow column-reverse

    .form-step-container
        .lazy-modal-container
            margin-top 0

        .lazy-modal-close
            display none

            &.lazy-modal-close-mobile
                display block

